@model IEnumerable<SuperShop.Models.Items>
@{
    ViewBag.Title = "Index";
}

<h2>Item</h2>

<p>
    @Html.ActionLink("Add", "Create");
</p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>CategoryId</th>
        <th></th>
    </tr>
    
    @foreach (SuperShop.Models.Items item in Model)
    {
        <tr>
            <td>
                @item.Name

            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Category.Name
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>

       
    }

</table>

